<%- include("partials/head.ejs") %>
    <link rel="stylesheet" href="/css/index-styles.css">
</head>
<body>
<%- include("partials/nav.ejs") %>
<main>
    <h1> <%= about %> </h1>
    <hr>
    <div id="contenedor-productos">

        <!-- Vamos a iterar el array de productos que le pasamos desde el endpoint -->
        <% productos.forEach(prod => { %>
            <div class="card-producto">
                <div class="margen-interno-card">
                    <img src="<%= prod.imagen_direccion %>" alt="<%= prod.nombre %>">
                    <h3><%= prod.nombre %></h3>
                    <p>Id: <%= prod.id %></p>
                    <p>activo: <%= prod.activo %></p>
                    <p>$<%= prod.precio %></p>
                    <form action="/consultar/<%= prod.id %>" method="GET">
                        <button type="submit">Ver detalle</button>
                    </form>
                    <form action="/modificar/<%= prod.id %>" method="GET">
                        <button type="submit">Modificar</button>
                    </form>
                </div>
            </div>
        <% }) %>

    </div>
</main>
<script src="/js/pantalla-index.js"></script>

<%- include("partials/footer.ejs") %>